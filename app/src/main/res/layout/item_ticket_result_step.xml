<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/tvTicketResultStepTrainNo"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="G1080"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgTicketResultStepFlg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/flg_guo" />

        <ImageView
            android:id="@+id/imgTicketResultStepFlg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:src="@mipmap/flg_zhong" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvTicketResultStepTimeFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:00"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvTicketResultStepTimeTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:30(0日)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tvTicketResultStepSeat1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="高级软卧:200"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvTicketResultStepSeat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="软卧:200"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvTicketResultStepSeat3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="硬座:200"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvTicketResultStepSeat4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="软卧:200"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/forward" />

</LinearLayout>